<% title "Literature" %>

<%= render @literature %>

<%if @literature.bibtex.present?%>
<button type="button" class="btn btn-default btn-sm" data-toggle="collapse" data-target="#bibtex">
  Show Bibtex
</button>

<div id="bibtex" class="collapse">
  <pre>
  <%=@literature.bibtex%>
  </pre>
</div>
<%end%>

  <%= link_to "Show all dates for " + @literature.short_citation, samples_path(:scope => {"literatures.id"=>@literature.id} ), :class => 'btn btn-info btn-sm' %>
<hr>
<p>
  <%= show_view_links(@literature) %>
</p>

<link rel="unapi-server" type="application/xml" href="<%= literature_un_api_path(@literature, :format => :xml) %>"/>

<abbr class='unapi-id' title='<%=@literature.id%>'/>
