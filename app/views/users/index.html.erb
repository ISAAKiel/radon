<% title "Users" %>

<table>
  <tr>
    <th>Login</th>
    <th>Email</th>
    <th>Roles</th>
    <th></th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%=h user.login %></td>
      <td><%=h user.email %></td>
      <td><%=h user.roles.map(&:name).join(", ") %></td>
      <td><%= index_table_links(user) %><td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New User", new_user_path %></p>
