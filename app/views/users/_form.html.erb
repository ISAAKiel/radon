<%= semantic_form_for @user do |f| %>
  <%= f.inputs do %>
    <%= f.input :login %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <% if permitted_to? :edit, @roles -%>
      <%= f.input :roles, :as => :check_boxes, :collection => Role.all %>
    <% end -%>
  <% end -%>
  <%= f.actions %>
<% end %>
