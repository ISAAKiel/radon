<% title "Login" %>

<%= form_for @user_session do |f| %>
	<% if @user_session.errors.any? %>
	  <ul>
		 <% @user_session.errors.full_messages.each do |msg| %>
		   <li><%= msg %></li>
		 <% end %>
	  </ul>
	<% end %>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login, id: "login_page_login_field" %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password, id: "login_page_password_field" %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
