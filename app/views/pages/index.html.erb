<% title "Pages" %>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
  </tr>
  <tbody id='pages'>
  <% for page in @pages %>
      <%= content_tag_for :tr, page, :class => cycle('','odd') do %>
      <td><%= page.name %></td>
      <td><%= page.content[0..40] + (if page.content.size > 40 then '[...]' else '' end) %></td>
      <td><%= link_to "Show", :action => 'show', :name => page.name %></td>
      <td><%= link_to "Edit", edit_page_path(page) %></td>
      <td><%= link_to "Destroy", page, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end -%>
  <% end %>
</table>

<p><%= link_to "New Page", new_page_path %></p>


